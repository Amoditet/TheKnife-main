<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="theknife.RestaurantsController" fx:id="rootPane" stylesheets="@style.css" style="-fx-background-color: #3d3d3d;">
    <top>
        <HBox spacing="30" style="-fx-background-color: #242424; -fx-padding: 10 20;" alignment="CENTER_LEFT">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Text style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-fill: white;">TheKnife</Text>
                <Text text="My Restaurants" style="-fx-font-size: 18px; -fx-fill: white; -fx-padding: 0 0 0 20;" />
            </HBox>
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Add" fx:id="addRestaurantBtn" onAction="#handleAddRestaurant" styleClass="nav-button" />
            <Button fx:id="exitBtn" text="x" style="-fx-font-size: 18px; -fx-border-color: white; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: transparent; -fx-cursor: hand;" onAction="#handleExitAction" />
        </HBox>
    </top>

    <center>
        <ListView fx:id="restaurantListView" style="-fx-background-color: #3d3d3d;" />
    </center>
</BorderPane>
